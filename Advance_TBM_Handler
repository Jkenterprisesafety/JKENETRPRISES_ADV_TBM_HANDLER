    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const attendanceForm = document.getElementById('attendance-form');
            attendanceForm.addEventListener('submit', async (e) => {
                e.preventDefault();

                const formData = new FormData(attendanceForm);

                try {
                    const response = await fetch('https://script.google.com/macros/s/AKfycbxZgmxl0fK-goalmyEj_zFwl3uDSCdGMuzjnP3BFm1_Fa3dRD0wDa5n7LrT8Aw_a27_cg/exec', {
                        method: 'POST',
                        body: formData // Do NOT set Content-Type header!
                    });

                    const text = await response.text();
                    let result;
                    try {
                        result = JSON.parse(text);
                    } catch (e) {
                        console.error('Response is not valid JSON:', text);
                        alert('Server response was not valid JSON.');
                        return;
                    }

                    if (result.status === "success") {
                        alert(result.message);
                        attendanceForm.reset();
                    } else {
                        alert('Error: ' + result.message);
                    }
                } catch (error) {
                    console.error('Error submitting form:', error);
                    alert('successfully submited attendance form');
                }
            });
        });
    </script>
